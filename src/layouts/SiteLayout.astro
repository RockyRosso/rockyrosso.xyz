---

import Title from "../components/Title.astro"

import "../assets/styles/base.scss";
import SiteFooter from "../components/SiteFooter.astro";

const { title } = Astro.props;

---

<html lang="en">
	<head>
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-HZR35K385V"></script>
		<script>
			// @ts-nocheck
			window.dataLayer = window.dataLayer || [];
			function gtag(){
				dataLayer.push(arguments);
			}
			gtag('js', new Date());

			gtag('config', 'G-HZR35K385V');
		</script>

		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon_01.ico" />
		<meta name="viewport" content="width=device-width,height=device-height" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content="A portfolio site relating to all work done by Rocky Ross. Works include games, web development, video editing, and more.">
		<meta property="og:description" content="A portfolio site relating to all work done by Rocky Ross. Works include games, web development, video editing, and more.">

		<meta property="og:title" content="Rocky Rosso Portfolio" />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="http://rockyrosso.xyz" />
		<meta property="og:image" content="https://cdn.rockyrosso.xyz/01_rocky.png" />

		<meta name="theme-color" content="#0074e0">

		<meta name="twitter:card" content="https://cdn.rockyrosso.xyz/01_rocky.png">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
				
		<Title name={title} />
	</head>
	<body>
        <main>
			<slot />
        </main>

		<SiteFooter />
	</body>
</html>